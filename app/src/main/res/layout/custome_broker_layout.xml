<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp">

    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey">

        <TextView
            android:id="@+id/txt_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/companyname"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/broker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_company_name"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="John Deo"
            android:textColor="@color/tab_text_color_op"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/broker_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/broker_name"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="New York City"
            android:textColor="@color/tab_text_color_op"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_veryfiedpic"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_below="@id/broker_city"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/veryfied_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/broker_city"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_toEndOf="@id/iv_veryfiedpic"
            android:fontFamily="@font/poppins_regular"
            android:text="verified"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@drawable/delete_border">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/delete"
            app:tint="@color/dark_red" />

    </RelativeLayout>

</RelativeLayout>