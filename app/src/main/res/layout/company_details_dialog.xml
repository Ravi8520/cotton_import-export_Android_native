<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/img_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_fil_details" />

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_image"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="@string/lbl_please_fill_detail"
                android:textColor="#53616C"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_company"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/txt_cancel"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="40dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/coustom_button_border"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:padding="@dimen/_5sdp"
                    android:text="Cancel"
                    android:textColor="@color/tab_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_ok"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/custome_button"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:padding="@dimen/_5sdp"
                    android:text="OK"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>