<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_membersdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:padding="@dimen/_7sdp">

        <TextView
            android:id="@+id/member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="John"
            android:textColor="@color/tab_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/member_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/member_name"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="Email :"
            android:textColor="@color/tab_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/member_name"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toEndOf="@id/member_mobile"
            android:fontFamily="@font/poppins_regular"
            android:text=""
            android:textColor="@color/tab_text_color"
            android:textSize="12sp" />



        <TextView
            android:id="@+id/txt_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/member_mobile"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/txt_pending"
            android:fontFamily="@font/poppins_regular"
            android:text=""
            android:textColor="@color/tab_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_pending"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_mobile_number"
            android:layout_alignParentRight="true"
            android:background="@drawable/pending_box"
            android:gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:padding="@dimen/_4sdp"
            android:text="@string/lbl_pending"
            android:textColor="@color/light_black"
            android:textSize="11sp" />

    </RelativeLayout>

</RelativeLayout>