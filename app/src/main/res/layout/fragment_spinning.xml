<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_5sdp"
            android:text="@string/yarn_count"
            android:textColor="@color/tab_text_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_yarn_count"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="50dp"
            android:background="@drawable/custome_edittext"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:hint="@string/yarn_count"
            android:textSize="@dimen/_12ssp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_1"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_5sdp"
            android:text="@string/cotton_rate"
            android:textColor="@color/tab_text_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_cottonrate"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="50dp"
            android:background="@drawable/custome_edittext"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:hint="@string/cotton_rate"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_5sdp"
            android:text="@string/rs_per_candy"
            android:textColor="@color/tab_text_color"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_2"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_regular"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"

            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_5sdp"
            android:text="@string/cotton_rate"
            android:textColor="@color/tab_text_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_cottonrate_kg"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="50dp"
            android:background="@drawable/custome_edittext"
            android:editable="false"
            android:enabled="false"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:hint="@string/cotton_rate"
            android:inputType="none"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_5sdp"
            android:text="@string/rs_kg"
            android:textColor="@color/tab_text_color"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_3"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_5sdp"
            android:text="@string/yield"
            android:textColor="@color/tab_text_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_yield"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="50dp"
            android:background="@drawable/custome_edittext"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:hint="@string/yield"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_5sdp"
            android:text="%"
            android:textColor="@color/tab_text_color"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_4"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_regular"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_5sdp"
            android:text="@string/waste_recovery"
            android:textColor="@color/tab_text_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_wrecovery"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="50dp"
            android:background="@drawable/custome_edittext"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:hint="@string/waste_recovery"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_5sdp"
            android:text="@string/rs_kg"
            android:textColor="@color/tab_text_color"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_5"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_regular"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_5sdp"
            android:text="@string/conversion_cost"
            android:textColor="@color/tab_text_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_conversioncost"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="50dp"
            android:background="@drawable/custome_edittext"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:hint="@string/conversion_cost"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_5sdp"
            android:text="@string/rs_k_count"
            android:textColor="@color/tab_text_color"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_6"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/poppins_regular"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_5sdp"
            android:text="@string/yarn_cost"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_yarn_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:fontFamily="@font/poppins_bold"
            android:text="0"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_5sdp"
            android:text="@string/rs_kg"
            android:textColor="@color/tab_text_color"
            android:textSize="10sp" />

    </LinearLayout>


</RelativeLayout>