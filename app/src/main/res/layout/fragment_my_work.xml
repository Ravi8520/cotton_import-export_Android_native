<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700">

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/my_work"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_rl"
        android:background="@drawable/custome_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp">

            <RelativeLayout
                android:id="@+id/rl_mypost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/icon_mypost"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custome_imageview"
                    android:padding="@dimen/_9sdp"
                    android:src="@drawable/my_post"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_toEndOf="@id/icon_mypost"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/my_post"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_mycontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_mypost"
                android:layout_alignStart="@id/rl_mypost"
                android:layout_alignEnd="@id/rl_mypost"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/icon_mycontact"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custome_imageview"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/my_contact"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_toEndOf="@id/icon_mycontact"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/my_contract"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_reports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_mycontact"
                android:layout_alignStart="@id/rl_mypost"
                android:layout_alignEnd="@id/rl_mypost"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/icon_reports"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custome_imageview"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/reports"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_toEndOf="@id/icon_reports"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/reports"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_reports"
                android:layout_alignStart="@id/rl_mypost"
                android:layout_alignEnd="@id/rl_mypost"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/icon_wallet"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custome_imageview"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/my_wallet"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_toEndOf="@id/icon_wallet"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/my_wallet"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_mybroker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_wallet"
                android:layout_alignStart="@id/rl_mypost"
                android:layout_alignEnd="@id/rl_mypost"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/icon_broker"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custome_imageview"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/broker"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_toEndOf="@id/icon_broker"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/my_broker"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_my_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_mybroker"
                android:layout_alignStart="@id/rl_mypost"
                android:layout_alignEnd="@id/rl_mypost"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/icon_request"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custome_imageview"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/ic_request"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_toEndOf="@id/icon_request"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/my_request"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_my_request"
                android:layout_alignStart="@id/rl_mypost"
                android:layout_alignEnd="@id/rl_mypost"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/icon_member"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custome_imageview"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/member"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_toEndOf="@id/icon_member"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/my_member"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_favourite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_member"
                android:layout_alignStart="@id/rl_mypost"
                android:layout_alignEnd="@id/rl_mypost"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/icon_favourite"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custome_imageview"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/favourite"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_toEndOf="@id/icon_favourite"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/my_favourites"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_favourite"
                android:layout_alignStart="@id/rl_mypost"
                android:layout_alignEnd="@id/rl_mypost"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/icon_profile"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custome_imageview"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/myprofile"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_toEndOf="@id/icon_profile"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/my_profile"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_changepass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_profile"
                android:layout_alignStart="@id/rl_mypost"
                android:layout_alignEnd="@id/rl_mypost"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/icon_change_pass"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custome_imageview"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/change_pass"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_toEndOf="@id/icon_change_pass"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/change_pass"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_changepass"
                android:layout_alignStart="@id/rl_mypost"
                android:layout_alignEnd="@id/rl_mypost"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/icon_logout"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custome_imageview"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/logout"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_toEndOf="@id/icon_logout"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/log_out"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>